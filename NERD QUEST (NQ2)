        "from microbit import *\n",
        "import music\n",
        "\n",
        "while True:\n",
        "# Detecta la fuerza del movimiento\n",
        "    fuerza = accelerometer.get_strength()\n",
        "\n",
        "    if fuerza > 1200: # Sensibilidad del movimiento\n",
        "# Suena como un sable al moverse\n",
        "        music.pitch(400, 100) # Encendido rápido\n",
        "        music.pitch(200, 200) # Zumbido grave\n",
        "        music.pitch(600, 150) # Golpe rápido\n",
        "        music.pitch(300, 300) # Vibración baja\n",
        "\n",
        "        display.show(Image.SWORD) # Muestra un ícono tipo espada\n",
        "        sleep(500)\n",
        "        display.clear()\n",
        "    else:\n",
        "# Sonido constante suave (como zumbido de sable encendido)\n",
        "        display.clear()\n",
        "        sleep(100)"
      ]
    }
